{
  "name": "opcode",
  "private": true,
  "version": "0.2.1",
  "license": "AGPL-3.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "prebuild": "",
    "build:executables": "bun run scripts/fetch-and-build.js --version=1.0.41",
    "build:executables:current": "bun run scripts/fetch-and-build.js current --version=1.0.41",
    "build:executables:linux": "bun run scripts/fetch-and-build.js linux --version=1.0.41",
    "build:executables:macos": "bun run scripts/fetch-and-build.js macos --version=1.0.41",
    "build:executables:windows": "bun run scripts/fetch-and-build.js windows --version=1.0.41",
    "preview": "vite preview",
    "tauri": "tauri",
    "build:dmg": "tauri build --bundles dmg",
    "check": "tsc --noEmit && cd src-tauri && cargo check",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "debug:session-start": "node scripts/measure-session-startup.mjs",
    "debug:session-start:json": "node scripts/measure-session-startup.mjs --json",
    "debug:session-start:gate": "node scripts/measure-session-startup.mjs --runs 3 --fail-on-slow-ms 5000",
    "debug:assistant-benchmark:json": "node scripts/measure-session-startup.mjs --benchmark-kind assistant --json",
    "debug:assistant-benchmark:gate": "node scripts/measure-session-startup.mjs --runs 3 --benchmark-kind assistant --fail-on-assistant-slow-ms 50000",
    "smoke:ui": "playwright test tests/smoke/agents-multiprovider.spec.ts tests/smoke/workspace-persistence.spec.ts tests/smoke/terminal-immediate-typing.spec.ts",
    "smoke:ui:headed": "playwright test tests/smoke/agents-multiprovider.spec.ts tests/smoke/workspace-persistence.spec.ts tests/smoke/terminal-immediate-typing.spec.ts --headed"
  },
